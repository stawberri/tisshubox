& > .tisshu
  flex 1
  min-width 0
  min-height 0
  display flex
  justify-content center
  align-items center

  .picture
    background no-repeat 50% 50% / contain
    max-width 100%
    max-height 100%

  .message
    align-self stretch
    display flex
    flex-flow column
    align-items center
    text-align center

    .icon
      flex 2
      display flex
      align-items flex-end
      font-size 5rem

    .text
      flex 3
      font-size 1.5rem
      margin 1em 0 auto

    .secondary
      margin-top 0.1em
