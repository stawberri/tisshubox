.pagebar
  margin 7px 0 -3px
  display flex
  justify-content center
  font-size 0.8rem
  z-index 100

  .page
    padding 0 5px
    transition-property color, opacity, transform
    transition-duration @transition-duration

    &:not(.current) .fa
      opacity 0.42
      cursor pointer
      transition-property opacity, transform
      transition-duration @transition-duration

      &:hover
        opacity 0.69
        transition-duration 0.2s

      &:active
        opacity 1
        transform scale(0.69)
        transition-duration 0.1s

    &.dummy
      visibility hidden

    .fa-circle-o-notch
      font-size 0.9em

    &.page-enter
    &.page-leave-to
    &.page-up-enter
    &.page-up-leave-to
    &.page-down-enter
    &.page-down-leave-to
      opacity 0

    &.page-leave-active
    &.page-up-leave-active
    &.page-down-leave-active
      position absolute

    &.page-up-leave-active
    &.page-down-leave-active
    &.page-up-move
    &.page-down-move
      transition-duration $vertical-duration

    &.page-up-move
    &.page-down-move
      transition-delay $vertical-duration

    &.page-up-leave-to
      transform translateY(-10px)

    &.page-down-leave-to
      transform translateY(10px)
