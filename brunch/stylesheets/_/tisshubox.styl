#tisshubox
  $tisshu-radius = 10px

  background $dark

  #vue
    perspective 1000px
    height 100vh
    display flex
    flex-flow column

    &::before
      order 1
      content ''
      flex 1 0 0

    &::after
      order 2
      content ''
      flex 1 0 0

  .pull
    @extends $clear-spacing
    order 4
    z-index 4
    height 50px
    margin 0 10px
    text-align center
    font-weight bold
    color $dark
    font-size: 1.5rem
    line-height @height
    border-radius $tisshu-radius $tisshu-radius 0 0
    background alpha($bg, 0.69)
    transition-property background, height, line-height, margin, box-shadow
    transition-duration 0.69s

    &~.tisshu
      transition-property transform, opacity
      transition-duration @transition-duration

    &:hover
      height 55px
      line-height @height
      margin 0 12px
      background alpha($bg, 0.75)
      box-shadow 0 0 5px alpha($bg, 0.5)
      transition-duration 0.2s

      &~.tisshu
        transform translateY(-5px)
        transition-duration @transition-duration

    &:active
      height 60px
      line-height @height
      margin 10px 15px 0
      background alpha($bg, 0.90)
      border 1px solid $bg
      border-bottom none
      box-shadow 0 0 10px alpha($bg, 0.69)
      transition-duration 0.1s

      &~.tisshu
        transform translateY(-20px)
        opacity 0.69
        transition-duration @transition-duration

  .tisshu
    display flex
    flex-flow column
    order 2
    z-index 2
    height calc(100vh - 70px)
    margin 0 10px
    background $bg
    border-radius $tisshu-radius
    overflow hidden

    #preview
      flex 1 1 0
      background center center / cover
