#tisshubox
  box-sizing border-box
  height 100vh
  display flex
  flex-flow column
  align-items center
  justify-content center
  padding-bottom 100px

  .background
    z-index: -1
    display block
    position absolute
    height 100%
    width 100%
    opacity 0.28
    filter blur(28px)
    transform scale(1.2)
    background no-repeat center center / cover

  .tisshu
    width 90vw
    flex 1 0 0
    margin-top 20px
    background no-repeat center center / contain

  .pull
    position absolute
    height 50px
    bottom ((@padding-bottom - @height) / 2)
    padding 0 50px
    font-size 1.2rem
    border none
    outline none

    .fa
      margin-right 1ch
